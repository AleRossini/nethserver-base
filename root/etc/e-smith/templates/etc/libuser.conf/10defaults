[import]
login_defs = /etc/login.defs
default_useradd = /etc/default/useradd

[defaults]
crypt_style = sha512
modules = files ldap
create_modules = ldap

[userdefaults]
LU_USERNAME = %n
LU_GIDNUMBER = %u

[groupdefaults]
LU_GROUPNAME = %n

[files]

[shadow]

[ldap]
server = ldap://localhost/
basedn = { esmith::util::ldapBase ($DomainName); }
binddn = cn=Manager,{ esmith::util::ldapBase ($DomainName); }
password = { esmith::util::LdapPassword (); }
bindtype = simple


[krb5]

[sasl]


{
    use JSON;
    use File::Basename;
    my $certs = decode_json(`/usr/libexec/nethserver/cert-list`);
    foreach my $cn ( keys %{$certs}) {
         my $crt = ${$certs}{$cn}{'file'};
         my ($name, $dir, $ext) = fileparse($crt, '.crt');
         my $key = "/etc/pki/tls/private/$name.key";
         $OUT .= $crt."\n";
         if ( -f $key) {
             $OUT .= $key."\n";
         }
    }
}

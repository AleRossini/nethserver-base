{
    my $isdn = $isdn{'status'} || "disabled";
    my $sync = $isdn{'UseSyncPPP'} || "yes";
    if ($isdn eq "enabled" && $sync eq "yes")
    {
	$OUT = "connect /etc/diald/scripts/connect";
    }
    else
    {
	$OUT = 'connect "/usr/sbin/chat -v -f ' .
	    '/etc/sysconfig/network-scripts/chat-ppp0"';
    }
}

{
    my %changes = (
	    rtl8139 => "8139too",
	    old_tulip => "tulip",
	);
    foreach my $n (qw (1 2 ))
    {
	my $driver = $DB->get("EthernetDriver$n");
	if (defined $driver)
	{
	    foreach my $old (keys %changes)
	    {
		if ($driver->prop('type') eq $old)
		{
		    $driver->merge_props(type => $changes{$old});
		}
	    }
	}
    }
}

{
    #
    # Initialize the database SystemName with current system value
    #
    
    my $initialized = $DB->get_value("SystemName");

    if($initialized) {
	# Value has been set, nothing to do.
	return;
    }

    my $systemName = `hostname -s` || "localhost";    
    chomp($systemName);   
    $DB->set_value("SystemName", $systemName);
}

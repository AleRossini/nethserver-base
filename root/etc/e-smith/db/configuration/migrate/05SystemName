{
	#
	# Initialize the database SystemName with current system value
	#

	my $dbSystemName = $DB->get_value("SystemName") || return;
	my $sysSystemName = `hostname -s` || "localhost";

	chomp($sysSystemName);
	chomp($dbSystemName);

	if( $sysSystemName ne $dbSystemName ) {
	    $DB->set_value("SystemName", $sysSystemName);
	}
}

{
    #
    # Initialize the database DomainName with current system value
    #
    
    my $initialized = $DB->get_value("DomainName");

    if($initialized) {
	# Value has been set, nothing to do.
	return;
    }

    my $domainName = `hostname -d` || "localdomain";
    chomp($domainName);
    $DB->set_value("DomainName", $domainName);
}

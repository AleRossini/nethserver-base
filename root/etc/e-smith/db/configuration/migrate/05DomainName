{
	#
	# Initialize database DomainName with current system value
	#

	my $dbDomainName = $DB->get_value("DomainName") || return;
	my $sysDomainName = `hostname -d` || "localdomain";

	chomp($sysDomainName);
	chomp($dbDomainName);

	if( $sysDomainName ne $dbDomainName ) {
	    $DB->set_value("DomainName", $sysDomainName);
	}
}
